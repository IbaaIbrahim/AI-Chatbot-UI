{
  "name": "flowdit-chatbot-library",
  "version": "1.0.0",
  "description": "A React chatbot library with streaming support, tool integration, and modern UI",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
    "build:ts": "tsc",
    "build:css": "sass assets/scss/styles.scss dist/styles.css --no-source-map",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run dev:ts\" \"npm run dev:css\"",
    "dev:ts": "tsc --watch",
    "dev:css": "sass --watch assets/scss/styles.scss:dist/styles.css --no-source-map",
    "watch": "npm run dev"
  },
  "keywords": [
    "react",
    "chatbot",
    "ai",
    "streaming",
    "typescript",
    "redux"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-markdown": "^8.0.0 || ^9.0.0",
    "react-redux": "^7.0.0 || ^8.0.0",
    "reactstrap": "^8.0.0 || ^9.0.0",
    "redux": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lodash": "^4.17.21",
    "react-markdown": "^10.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux": "^5.0.1",
    "sass": "^1.69.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  }
}